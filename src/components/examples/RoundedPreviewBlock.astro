---
import PreviewBlock from '@components/PreviewBlock.astro';
const rounded = ['none', 'default', 'small', 'medium', 'large', 'xlarge', '2xlarge', '3xlarge', 'full'];
import { Title, Text } from '@tailus-ui/typography';
import Button from '@tailus-ui/Button';
---

<>
    {
        rounded.map(radius => {
            return (
                <div class="space-y-6 group">
                    <Title size="lg" weight="medium" id={radius} className="capitalize">
                        {radius}
                    </Title>
                    <PreviewBlock codeBlocks={[{ code: `<html data-rounded="${radius}" >`, lang: 'html' }]}>
                        <div data-rounded={radius} data-shade="900" class="my-6 relative max-w-[18rem] p-[--feedback-padding] border feedback-shadow rounded-[--card-radius] feedback-bg group-last:fancy-border">
                            <Title as="h3" size="base" align="center" weight="medium">
                                Delete Item
                            </Title>
                            <Text align="center" className="mt-3">
                                This photo will be deleted from your iCloud Photos.
                            </Text>
                            <div class="overflow-hidden rounded-b-[--card-radius] -mx-[--feedback-padding] -mb-[--feedback-padding] flex border-t divide-x">
                                <Button.Root size="lg" className="rounded-none w-1/2" variant="ghost" intent="gray">
                                    <Button.Label>Cancel</Button.Label>
                                </Button.Root>
                                <Button.Root size="lg" className="rounded-none w-1/2" variant="ghost" intent="danger">
                                    <Button.Label>Delete</Button.Label>
                                </Button.Root>
                            </div>
                        </div>
                    </PreviewBlock>
                </div>
            );
        })
    }
</>
